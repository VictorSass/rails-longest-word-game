<h1>New Game</h1>

<div class="container">
  <div class="shuffle">
    <% @letters.each do |letter| %>
      <div class="letter"><%= letter %></div>
    <% end %>
  </div>
  <div class="user-word">
    <form action="/score" method="post" class="form-inline">
    <%= hidden_field_tag :authenticity_token,form_authenticity_token %>
      <div class="form-label">
        <label for="word">What is the longest word you can find ?</label>
      </div>
      <div class="form-answer">
        <input id="word-input" type="text" name="word" class="form-control">
        <input id="token" name="token" type="hidden" value=<%= @letters.join %> />
        <input id="submit" type="submit" value="Play" class="form-control btn-primary-outline">
      </div>
    </form>
  </div>
</div>
